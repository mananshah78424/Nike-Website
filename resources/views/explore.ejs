                <section class="lacetype">
                    <h5 class="mb-3">Lace Type</h5>
                    <div class="mb-5 category_container">
                        <p class="mb-3"><a href="#" class="lacecategory" id="Lace">Lace</a></p>
                        <p class="mb-3"><a href="#" class="lacecategory" id="No Lace">No Lace</a></p>
