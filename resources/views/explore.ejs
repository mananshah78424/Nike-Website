<script>
    function myFunction() {
        document.getElementById("hidefilters").innerHTML



        var x = document.getElementById("myDIV");

        if (x.style.display === "none") {
            x.style.display = "block";
            document.getElementById("hidefilters").innerHTML = "Hide Filters"
        } else {
            x.style.display = "none";
            document.getElementById("hidefilters").innerHTML = "Show filters"
        }
    }
</script>