    <div class="shoeslist col-md-9 row">


        <% shoes.forEach(function(shoe){ %>
        <div class="col-md-4 shoeitem <%=shoe.type %> <%=shoe.size %> <%=shoe.gender %> <%=shoe.price%> <%=shoe.lace%>"
