<div class="container">
    <form method="POST" action="addshoes">

        <div class="form-group field">
            <label for="size">Size ( Enter size from 3-11) </label>
            <input type="text" class="form-control hide " name="size">
        </div>
        <div class="form-group field">
            <label for="gender">Gender</label>
            <select class="form-control" name="gender">
                <option>Men</option>
                <option>Women</option>
                <option>Kids</option>

            </select>
        </div>
        <div class="form-group field">
            <label for="type">Type</label>
            <select class="form-control" name="type">
                <option>casuals</option>
                <option>gym</option>
                <option>sportswear</option>
                <option>football</option>
                <option>sportswear</option>
                <option>jordans</option>

            </select>

        </div>
        <div class="form-group field">
            <label for="name">Shoe Name</label>
            <input type="text" class="form-control hide " name="name">
        </div>
        <div class="form-group field">
            <label for="price">Price</label>
            <input type="text" class="form-control hide " name="price">
        </div>
        <div class="form-group field">
            <label for="image">Image</label>
            <input type="text" class="form-control hide " name="image">
        </div>
        <div class="form-group field">
            <label for="lace">Lace</label>
            <input type="text" class="form-control hide " name="lace">
        </div>
        <div class="form-group field">
            <label for="desc">Desc</label>
            <input type="text" class="form-control hide " name="desc">
        </div>
        <button type="submit" class="btn btn-dark">Add shoe</button>

    </form>
</div>